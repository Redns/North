@using Microsoft.JSInterop
@using MudBlazor
@using North.RCL.Texts

<MudToolBar Style="@Style">
    <MudTooltip Text="@ExpandTooltip" Placement="Placement.Right">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" OnClick="@OnNavMenuStateChanged" DisableRipple Style="margin-left:-20px;" />
    </MudTooltip>
    <TitleText Text="@Title" Style="margin-left:10px; font-size:22px; user-select:none;" />
    <MudSpacer />
    <MudTooltip Text="通知">
        <MudIconButton Icon="@Icons.Material.Outlined.Notifications" />
    </MudTooltip>
    <MudTooltip Text="用 户">
        <MudIconButton Icon="@Icons.Material.Outlined.ManageAccounts" OnClick="@OnUserClick" />
    </MudTooltip>
    <MudTooltip Text="@ThemeSwitchTooltip">
        <MudIconButton Icon="@ThemeSwitchIcon" OnClick="@OnSwitchTheme" />
    </MudTooltip>
</MudToolBar>