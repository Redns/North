@page "/login"

@using North.Common
@using North.Core.Common;
@using North.Core.Entities
@using System.Security.Claims
@using North.RCL.Forms
@using SqlSugar
@using IP2Region.Net.Abstractions;
@using IP2Region.Net.XDB;

@inject IJSRuntime _js
@inject ILogger _logger
@inject ISnackbar _snackbar
@inject ISearcher _ipSearchar
@inject NavigationManager _nav
@inject ISqlSugarClient _client
@inject AppSetting _appSetting
@inject IHttpContextAccessor _accessor
@inject Dictionary<string, ClaimsIdentity> _identifies

@layout AuthLayout

<MudStack Class="d-flex justify-center align-center mud-width-full mud-height-full">
    <LoginForm Model="@LoginModel" Title="@_appSetting.Appearance.Name" 
               OnLogin="@UserLogin" OnEnter="@EnterToLogin" LoginRunning="@LoginRunning"
               RegisterLink="register" RetrievePasswordLink="findpwd"/>
</MudStack>