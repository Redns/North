{
  "General": {
    "DataBase": {
      "EnabledName": "Local",
      "Databases": [
        {
          "Name": "Local",
          "Type": 2,
          "ConnectionString": "Data Source=Data/Databases/North.db3;",
          "IsAutoCloseConnection": true
        }
      ]
    },
    "ApplicationUrl": "http://*:12121"
  },
  "Appearance": {
    "Name": "North",
    "Icon": "icons/snow.svg",
    "NavAutoExpand": false,
    "BackgroundUrl": "https://image.krins.cloud/bing.jpg",
    "ImageLazyLoad": false,
    "Footer": "\u003Ca href=\u0022https://github.com/Redns/ImageBed\u0022 style=\u0022color: rgba(0, 164, 255, 1); font-size: 16px\u0022\u003EPowered by North \u00A9 2022-2023 Redns, All rights reserved\u003C/a\u003E"
  },
  "Register": {
    "AllowRegister": true,
    "MaxAvatarSize": 0.5,
    "VerifyEmailValidTime": 86400000,
    "Default": {
      "IsApiAvailable": true,
      "MaxUploadNums": 1000,
      "MaxUploadCapacity": 1024,
      "SingleMaxUploadNums": 10,
      "SingleMaxUploadCapacity": 100
    }
  },
  "Notify": {
    "Email": {
      "Account": "",
      "Code": ""
    }
  },
  "Auth": {
    "CookieValidTime": 259200
  },
  "Log": {
    "Output": "Data/Logs/North.log",
    "Levels": {
      "Min": 2,
      "Max": 4
    },
    "Layout": "${date:format=yyyy-MM-dd HH\\:mm\\:ss} [North ${level}] ${message}${onexception:${newline}${exception:format=toString}${expection:format=StackTrace}}"
  },
  "Plugin": {
    "ImageSource": "https://nuget.cdn.azure.cn/v3/index.json"
  }
}